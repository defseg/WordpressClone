<form class="post-form">
  <input type="hidden" name="post[blog_id]" value="<%= blog.escape('id') %>">
  <label>Title
    <input type="text" name="post[title]" value="<%= post.escape('title') %>">
  </label><br>

  <label>Content<br>
    <textarea name="post[content]" rows="16" cols="80"><%= blog.escape('content') %></textarea>
  </label>

  <label>Status
    <select name="post[status]">
      <option value="0">Published</option>
      <option value="1">Draft</option>
      <option value="2">Pending Review</option>
    </select>
  </label>

  <input type="submit" value="Post">
</form>
